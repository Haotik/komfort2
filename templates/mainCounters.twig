        <h5>ГВС2</h5>
        <span class="archive">{{ hot2Archive }}</span>
        <span class="time">{{ hot2Time }}</span>
        <span class="status">{{ hot2Status }}</span>
        <span>{{ hot2 }}</span>
        <input type="text" class="counterInput" name="counter4">
    </div>
    <div class="counter">
        <h5>Т1</h5>
        <span class="archive">{{ T1Archive }}</span>
        <span class="time">{{ electroTime }}</span>
        <span class="status">{{ electroStatus }}</span>
        <span>{{ T1 }}</span>
        <input type="text" class="counterInput" name="counter5">
    </div>
    <div class="counter">
        <h5>Т2</h5>
        <span class="archive">{{ T2Archive }}</span>
